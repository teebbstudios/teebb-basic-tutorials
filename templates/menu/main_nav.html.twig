{% extends 'knp_menu.html.twig' %}


{% block list %}
    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        {% import _self as knp_menu %}
        <ul class="navbar-nav">
            {{ block('children') }}
        </ul>
    {% endif %}
{% endblock %}

{% block item %}
    {% if item.hasChildren %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button"
               aria-expanded="false">
                {{ block('label') }}
            </a>
            {% if item.label == '产品' %}
                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow p-3"
                     style="min-width: 16rem;">
                    <div class="dropdown-item py-2">
                        <div class="row">
                            <div class="col-auto align-content-center">
                                    <span class="avatar rounded-circle text-teebb">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16"
                                             class="bi bi-book-half" fill="currentColor"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                  d="M8.5 2.687v9.746c.935-.53 2.12-.603 3.213-.493 1.18.12 2.37.461 3.287.811V2.828c-.885-.37-2.154-.769-3.388-.893-1.33-.134-2.458.063-3.112.752zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                                        </svg>
                                    </span>
                            </div>
                            <div class="col">
                                <div class="text-truncate">
                                    <a href="#" class="text-muted font-weight-bold">概览</a>
                                </div>
                                <div class="text-gray small">1分钟快速了解teebb</div>
                            </div>
                        </div>
                    </div>
                    <div class="dropdown-item py-2">
                        <div class="row">
                            <div class="col-auto align-content-center">
                                            <span class="avatar rounded-circle text-teebb">
                                                <svg width="1em" height="1em" viewBox="0 0 16 16"
                                                     class="bi bi-collection-play-fill" fill="currentColor"
                                                     xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd"
                                                          d="M1.5 14.5A1.5 1.5 0 0 1 0 13V6a1.5 1.5 0 0 1 1.5-1.5h13A1.5 1.5 0 0 1 16 6v7a1.5 1.5 0 0 1-1.5 1.5h-13zm5.265-7.924A.5.5 0 0 0 6 7v5a.5.5 0 0 0 .765.424l4-2.5a.5.5 0 0 0 0-.848l-4-2.5zM2 3a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 0-1h-11A.5.5 0 0 0 2 3zm2-2a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7A.5.5 0 0 0 4 1z"/>
                                                </svg>
                                            </span>
                            </div>
                            <div class="col">
                                <div class="text-truncate">
                                    <a href="#" class="text-muted font-weight-bold">视频教程</a>
                                </div>
                                <div class="text-gray small">使用teebb快速开发应用</div>
                            </div>
                        </div>
                    </div>
                    <div class="dropdown-item py-2">
                        <div class="row">
                            <div class="col-auto align-content-center">
                                            <span class="avatar rounded-circle text-teebb">
                                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-map-fill"
                                                     fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd"
                                                          d="M16 .5a.5.5 0 0 0-.598-.49L10.5.99 5.598.01a.5.5 0 0 0-.196 0l-5 1A.5.5 0 0 0 0 1.5v14a.5.5 0 0 0 .598.49l4.902-.98 4.902.98a.502.502 0 0 0 .196 0l5-1A.5.5 0 0 0 16 14.5V.5zM5 14.09V1.11l.5-.1.5.1v12.98l-.402-.08a.498.498 0 0 0-.196 0L5 14.09zm5 .8V1.91l.402.08a.5.5 0 0 0 .196 0L11 1.91v12.98l-.5.1-.5-.1z"/>
                                                </svg>
                                            </span>
                            </div>
                            <div class="col">
                                <div class="text-truncate">
                                    <a href="#" class="text-muted font-weight-bold">开发路线图</a>
                                </div>
                                <div class="text-gray small">快速了解teebb未来的功能</div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow p-3"
                     style="min-width: 16rem;">
                    <ul class="list-group list-group-flush">
                        {% for child in item.children %}
                        <li class="list-group-item dropdown-item">
                            <a class="text-muted w-100" href="{{ child.uri }}">
                                            <span class="font-weight-bold">
                                                {{ child.label }}
                                            </span>
                            </a>
                        </li>
                        {% endfor %}

                    </ul>
                </div>
            {% endif %}
        </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link" href="{{ item.uri }}">{{ block('label') }}</a>
        </li>
    {% endif %}
{% endblock %}